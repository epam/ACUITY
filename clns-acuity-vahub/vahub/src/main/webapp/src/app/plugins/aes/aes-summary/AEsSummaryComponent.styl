category-border-radius = 10px
active-color = #a3d2e3
primary-color = #d4e9f2
x-component-margin = 10px
.summary-categories-container
  display inline-block;
.container-fluid{
  margin-top 10px;
}
#summary-categories
  margin-left x-component-margin

  .summaryCategory
    @media (max-width 1000px)
      width 94%
      margin-bottom 10px;
      margin-right x-component-margin

    &:hover
      background active-color

    float left
    a
      color black
      &:hover
        background none
    margin-right x-component-margin
    outline none
    background primary-color
    @media (min-width 1000px)
      &:first-child
        border-radius category-border-radius 0 0 category-border-radius
      &:last-child
        border-radius 0 category-border-radius category-border-radius 0
    &.active-category
      background active-color
.total-subjects-count, .table-name
  margin x-component-margin 0
  font-size 1.2em
.notes
  position: fixed;
  bottom: 0;
  .notes-list
    font-size: 0.8em;

.nodata
  text-align: center;
  vertical-align: middle;
  padding: 20px;
  font-style: italic;

:host::ng-deep
  .ag-header-group-cell-label, .ag-fresh .ag-header-cell-text
    text-align center
    font-weight bold
