{
    "compilerOptions": {
        "target": "ES5",
        "moduleResolution": "node",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "lib": ["es2015", "dom"],
        "typeRoots": [
            "node_modules/@types/",
            "typings/"
        ],
        "types": [
            "lodash",
            "immutable",
            "jquery",
            "wnumb",
            "reselect",
            "node",
            "resize-observer-browser"
        ]
    },
    "include": [
        "typings/vahub.d.ts",
        "typings/vahub-model.d.ts"
    ]
}
