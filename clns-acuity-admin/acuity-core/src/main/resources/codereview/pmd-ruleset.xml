<?xml version="1.0"?>

<ruleset name="AZ-ruleset">
    <description>
        AZ Ruleset
    </description>

    <rule ref="codereview/pmd/basic.xml"/>
    <rule ref="codereview/pmd/unusedcode.xml">
        <exclude name="UnusedPrivateField"/>
    </rule>
    <rule ref="codereview/pmd/codesize.xml"/>
    <rule ref="codereview/pmd/javabeans.xml">
        <exclude name="BeanMembersShouldSerialize"/>
    </rule>
    <rule ref="codereview/pmd/imports.xml"/>
    <rule ref="codereview/pmd/braces.xml"/>
    <rule ref="codereview/pmd/naming.xml">
        <exclude name="ShortVariable"/>
        <exclude name="AvoidFieldNameMatchingTypeName"/>
        <exclude name="AbstractNaming"/>
        <exclude name="LongVariable"/>
    </rule>
    <rule ref="codereview/pmd/strictexception.xml"/>
    <rule ref="codereview/pmd/design.xml"/>
    <rule ref="codereview/pmd/junit.xml"/>

